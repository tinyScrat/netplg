@namespace MyApp.WebUI.Layouts
@inherits RxComponentBase
@inject HeaderViewModel VM

<RadzenHeader>
    <RadzenStack Orientation="Orientation.Horizontal"
                 JustifyContent="JustifyContent.SpaceBetween"
                 AlignItems="AlignItems.Center"
                 Style="width:100%">

        <!-- Left -->
        <RadzenImage Path="images/logo.png"
                     Alt="Company Logo"
                     class="company-logo" />

        <!-- Right -->
        <RadzenProfileMenu>
            <Template>
                <RadzenText
                    Text="@VM.UserDisplayName"
                    TextStyle="TextStyle.Body1" />
            </Template>
            <ChildContent>
                <RadzenProfileMenuItem Text="Profile" Path="/profile" Icon="account_circle"></RadzenProfileMenuItem>
                <RadzenProfileMenuItem Text="Help" Path="/help" Icon="announcement"></RadzenProfileMenuItem>
            </ChildContent>
        </RadzenProfileMenu>
    </RadzenStack>
</RadzenHeader>

@code {
    protected override void OnInitialized()
    {
        Bind(VM);
    }
}
